<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/search"
    tools:context="com.example.user.pipilika.SearchActivity"
    >

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/searchByAuthor"
        android:onClick="search_By_author"
        android:background="#03aaaaaa"
        android:textSize="30dp"
        android:textColor="#107f86"
        android:text="Search By Author"
        android:layout_below="@+id/searchByName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="63dp" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/searchByName"
        android:onClick="search_by_name"
        android:background="#03aaaaaa"
        android:textColor="#107f86"
        android:textSize="30dp"
        android:text="Search By Name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp" />
</RelativeLayout>
