<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/user_option"
    tools:context="com.example.user.pipilika.UserOption">

    <TextView
        android:text="SUCCESSFULLY"
        android:textSize="30dp"
        android:textColor="#f9f3f3"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youare"
        android:layout_centerHorizontal="true"
        android:id="@+id/successful"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <TextView
        android:text="YOU ARE "
        android:textSize="30dp"
        android:textColor="#f9f3f3"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youare"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="cursive"/>


    <TextView
        android:text="LOGGED IN !!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#f9f3f3"
        android:layout_marginTop="17dp"
        android:id="@+id/loged_in"
        android:layout_below="@+id/successful"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/button_search"
        android:layout_marginTop="49dp"
        android:id="@+id/image_button"
        android:layout_below="@+id/loged_in"
        android:layout_alignRight="@+id/youare"
        android:layout_alignEnd="@+id/youare"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        />

    <TextView
        android:text="SEARCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#abbdec"
        android:id="@+id/search"
        android:layout_marginTop="29dp"
        android:onClick="showList"
        android:layout_below="@+id/image_button"
        android:layout_centerHorizontal="true"
       />


</RelativeLayout>
