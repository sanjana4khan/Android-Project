<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.user.pipilika.Admin_optionActivity">

    <TextView
        android:text="SEARCH"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="45dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#a67373"
        android:id="@+id/search"
        android:layout_below="@+id/delete"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/delete"
        android:onClick="list"


        />

    <TextView
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="45dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#a67373"
        android:id="@+id/addBook"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="31dp"
        android:onClick="add_book"
        android:layout_above="@+id/delete"
        />

    <TextView
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="45dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#a67373"
        android:id="@+id/delete"
        android:onClick="delete"
        android:layout_centerVertical="true"
        android:layout_marginLeft="73dp"
      />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/add_button"
        android:id="@+id/image_add"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/addBook"
        android:layout_toRightOf="@+id/addBook"
        />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/delete_button"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/search"
        android:layout_marginLeft="9dp"
        android:id="@+id/image_delete" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/button_search"
        android:id="@+id/image_search"
        android:layout_alignTop="@+id/search"
        android:layout_alignLeft="@+id/image_delete"
        android:layout_marginLeft="8dp"
         />


</RelativeLayout>
