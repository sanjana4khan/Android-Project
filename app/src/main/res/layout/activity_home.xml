<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/icon1"


    tools:context="com.example.user.pipilika.HomeActivity"
    >


    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:textColor="#298337"
        android:textSize="33dp"
        android:background="#0b1e3328"

        android:layout_marginBottom="14dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="cursive"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_alignParentTop="true"

       >
    <RadioButton
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:id="@+id/r_user"
        android:text="User"
        android:textColor="#f4efef"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/r_admin"
        android:textStyle="bold"
        android:fontFamily="cursive"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/r_admin"
        android:text="Admin"
        android:textSize="20dp"
        android:layout_below="@+id/r_user"
        android:layout_alignRight="@+id/password"
        android:textStyle="bold"
        android:fontFamily="cursive"
        ></RadioButton>
        ></RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:hint="Password"
        android:textColorHint="#366e2a"
        android:textSize="33dp"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/username"
        android:hint="User Name"
        android:textColorHint="#458938"
        android:textSize="33dp"
        android:layout_above="@+id/password"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"/>




    />
</RelativeLayout>

