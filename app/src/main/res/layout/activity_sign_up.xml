<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/book1"
    tools:context="com.example.user.pipilika.Sign_upActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#d1cece"
        android:inputType="textPassword"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_marginTop="11dp"
        android:id="@+id/password"
        android:hint="Password"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:textSize="30dp"
        android:textColor="#d7d4d4"
        android:background="#0a3b3a3a"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/password"
        android:textStyle="bold"
        android:fontFamily="cursive"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColorHint="#d1cece"
        android:id="@+id/semester"
        android:hint="Semester"
        android:textSize="30dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="#d1cece"
        android:hint="Name"
        android:layout_marginTop="8dp"
        android:id="@+id/name"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColorHint="#d1cece"
        android:id="@+id/year"
        android:hint="Year"
        android:textSize="30dp"
        android:layout_below="@+id/semester"
        android:layout_alignLeft="@+id/semester"
        android:layout_alignStart="@+id/semester"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="User Name"
        android:textColorHint="#d1cece"
        android:id="@+id/username"
        android:textSize="30dp"
        android:layout_below="@+id/year"
        android:layout_alignLeft="@+id/year"
        android:layout_alignStart="@+id/year"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#d1cece"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:id="@+id/password2"
        android:hint="   Confirm Password"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
